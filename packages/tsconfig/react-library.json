{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "module": "esnext",
    "target": "es6",
    "noImplicitAny": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
